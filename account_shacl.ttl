@prefix ex: <http://example.org/shacl/> .
@prefix fibo-fbc: <https://spec.edmcouncil.org/fibo/ontology/FBC/ProductsAndServices/ClientsAndAccounts/> .
@prefix fibo-fnd: <https://spec.edmcouncil.org/fibo/ontology/FND/Arrangements/Documents/> .
@prefix fibo-rel: <https://spec.edmcouncil.org/fibo/ontology/FND/Relations/Relations/> .
@prefix cmns-id: <https://www.omg.org/spec/Commons/Identifiers/> .
@prefix cmns-org: <https://www.omg.org/spec/Commons/Organizations/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:Account4Modelling a sh:NodeShape ;
    sh:targetClass fibo-fbc:Account ;
    sh:description "container for records associated with a business arrangement for regular transactions and services" ;
    sh:property ex:HasBalance4Modelling,
                ex:HasCloseDate4Modelling,
                ex:HasOpenDate4Modelling,
                ex:HasRecord4Modelling,
                ex:IsHeldBy4Modelling,
                ex:IsIdentifiedBy4Modelling,
                ex:IsProvidedBy4Modelling .

ex:HasBalance4Modelling a sh:PropertyShape ;
    sh:path fibo-fbc:hasBalance ;
    sh:description "relates an account to the net amount of money available in that account" ;
    sh:node fibo-fbc:Balance .

ex:HasCloseDate4Modelling a sh:PropertyShape ;
    sh:path fibo-fbc:hasCloseDate ;
    sh:description "relates something to the date that it was closed" ;
    sh:node fibo-fbc:CloseDate .

ex:HasOpenDate4Modelling a sh:PropertyShape ;
    sh:path fibo-fbc:hasOpenDate ;
    sh:description "relates something to the date that it was created" ;
    sh:node fibo-fbc:OpenDate .

ex:HasRecord4Modelling a sh:PropertyShape ;
    sh:path fibo-fnd:hasRecord ;
    sh:description "links something to a record that pertains to it" ;
    sh:node fibo-fnd:TransactionRecord .

ex:IsHeldBy4Modelling a sh:PropertyShape ;
    sh:path fibo-rel:isHeldBy ;
    sh:description "indicates the party that possesses and has at least partial control of something, regardless of ownership" ;
    sh:node fibo-rel:AccountHolder .

ex:IsIdentifiedBy4Modelling a sh:PropertyShape ;
    sh:path cmns-id:isIdentifiedBy ;
    sh:description "has an identifier that is unique within some context" ;
    sh:node cmns-id:AccountIdentifier .

ex:IsProvidedBy4Modelling a sh:PropertyShape ;
    sh:path cmns-org:isProvidedBy ;
    sh:description "is made available by" ;
    sh:node cmns-org:AccountProvider .
